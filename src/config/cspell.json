{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./allowed-words.txt",
      "addWords": true
    }
  ],
  "languageSettings": [
    {
      "languageId": "markdown",
      "caseSensitive": "true"
    },
  ],
  "dictionaries": ["project-words"],
  "ignorePaths": ["node_modules", "/allowed-words.txt"]
}
